COMMAND="../scripts/dd-list.pl"

testBinariesFromSameSource() {
  $COMMAND -s dd-list/sources vim-gtk vim-nox 2>&1 >/dev/null
  rc=$?
  assertEquals 'packages found' 0 $rc
}

. shunit2
